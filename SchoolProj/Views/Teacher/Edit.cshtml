@model SchoolProj.Models.Teacher

@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>

<div class="container">
    <form action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="TeacherId" />

        <div class="row">
            <div class="col-25">
                <label for="fname">Teacher Name</label>
            </div>
            <div class="col-75">
                <input type="text" id="TeacherName" name="TeacherName" placeholder="Your name.." value="@Model.TeacherName">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="age">Age</label>
            </div>
            <div class="col-75">
                <input type="text" id="TeacherAge" name="" placeholder="@Model.TeacherAge" readonly>
            </div>
        </div>

        <div class="row">
            <div class="col-25">
                <label for="age">Age</label>
            </div>
            <div class="col-75">
                <input id="datepicker" name="DateBirth" type="text" class="form-control" value="@Model.DateBirth.ToShortDateString()" placeholder="@DateTime.Now.ToString("MM/dd/yyyy")"/>
            </div>
        </div>

        <br />


        <div class="row">
            <input type="submit" value="Save">
        </div>
    </form>
</div>



@section Scripts
{
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
}