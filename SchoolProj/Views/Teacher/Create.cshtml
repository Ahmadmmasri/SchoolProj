
<div class="container">
    <form action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-25">
                <label for="fname">Teacher Name</label>
            </div>
            <div class="col-75">
                <input type="text" id="TeacherName" name="TeacherName" placeholder="Your name..">
            </div>
        </div>

        <div class="row">
            <div class="col-25">
                <label for="age">Age</label>
            </div>
            <div class="col-75">
                <input id="datepicker" name="DateBirth" type="text" class="form-control" value="@DateTime.Now.ToString("MM/dd/yyyy")" />
            </div>
        </div>


        <div class="row">
            <input type="submit" value="Save">
        </div>
    </form>
</div>



@section Scripts
{
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
}