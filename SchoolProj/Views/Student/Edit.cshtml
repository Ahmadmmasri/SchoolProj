@model SchoolProj.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="container">
    <form action="Create" method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="StudentId" />

        <div class="row">
            <div class="col-25">
                <label for="fname">Student Name</label>
            </div>
            <div class="col-75">
                <input type="text" id="StudentName" name="StudentName" placeholder="Your name.." value="@Model.StudentName">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="age">Age</label>
            </div>
            <div class="col-75">
                <input type="text" id="StudentAge" name="" placeholder="@Model.StudentAge" readonly>
            </div>
        </div>

        <div class="row">
            <div class="col-25">
                <label for="age">Age</label>
            </div>
            <div class="col-75">
                <input id="datepicker" name="DateBirth" type="text" class="form-control" value="@Model.DateBirth.ToShortDateString()" placeholder="@DateTime.Now.ToString("MM/dd/yyyy")" />
            </div>
        </div>


        <div class="row">
            <div class="col-25">
                <label for="lname">Student Photo</label>
            </div>
            <div class="col-75">
                <input type="file" name="StudentPhoto" />
            </div>
        </div>


        <div class="row">
            <input type="submit" value="Save">
        </div>
    </form>
</div>



@section Scripts
{
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
}